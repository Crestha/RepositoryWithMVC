@model RepositoryWithMVC.Models.Employee

@{
    ViewBag.Title = "EmployeeDetails";
}

<div class="row">
    <div class="col-lg-12">
        <h3>Employee Details</h3>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-bordered">
            <tr>
                <th>@Html.DisplayNameFor(model => model.EmployeeName)</th>
                <th class="hidden-xs">@Html.DisplayNameFor(model => model.Gender)</th>
                <th class="hidden-xs">@Html.DisplayNameFor(model => model.Address)</th>
                <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                <th class="hidden-xs">@Html.DisplayNameFor(model => model.DateOfBirth)</th>
                <th>Department Name</th>
                <th>Action</th>
            </tr>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.EmployeeName)
                </td>
                <td class="hidden-xs">
                    @Html.DisplayFor(model => model.Gender)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Address)
                </td>
                <td>
                    @Html.DisplayFor(model => model.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(model => model.DateOfBirth)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Department.DepartmentName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditEmployee","Employee", new { employeeId = Model.EmployeeId }, null) |
                    @Html.ActionLink("Delete", "DeleteEmployee", "Employee", new { employeeId = Model.EmployeeId }, null)
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @Html.ActionLink("Back to List", "Index", "Employee")
    </div>
</div>
